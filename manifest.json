{
  "manifest_version": 2,

  //extension info
  "name": "Quick Links",
  "description": "This extension allows users to create keyboard shortcuts of their favorite websites from an easy-to-use UI.",
  "version": "1.0",

  "background": {
        "scripts": ["background.js"]
    },

  "browser_action": {
    //displayed tooltip on toolbar
    "default_title": "Quick Links",

    //html pages utilized by the extension
    "default_popup": "popup.html",
    "default_background": "background.html"
	},

  //icon pack
  "icons": {
  "16": "images/icon_16x16.png",
  "48": "images/icon_48x48.png",
  "128": "images/icon_128x128.png"
  },

  //permissions required for the extension to function
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "https://ajax.googleapis.com/"
  ],

  //preset commands *** TESTING REIMPLEMENT BEFORE RELEASE ****
  "commands": {
    "link1" : {
      "suggested_key" : {
        "default" : "Ctrl+1",
        "windows" : "Ctrl+1",
        "mac" : "Command+1",
        "linux" : "Ctrl+3"
      },
      "description": "Whatever you want"
    },

    "link2" : {
      "suggested_key" : {
        "default" : "Ctrl+2",
        "windows" : "Ctrl+2",
        "mac" : "Command+2",
        "linux" : "Ctrl+2"
      },
      "description": "Whatever you want"
    },

      "link3" : {
        "suggested_key" : {
          "default" : "Ctrl+3",
          "windows" : "Ctrl+3",
          "mac" : "Command+3",
          "linux" : "Ctrl+3"
        },
        "description": "Whatever you want"
     }
  }
}
